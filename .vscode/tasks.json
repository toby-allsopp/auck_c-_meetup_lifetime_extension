{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "clang++ -g -o build/${fileBasenameNoExtension} ${file} && build/${fileBasenameNoExtension}",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run with asan",
            "type": "shell",
            "command": "clang++ -g -fsanitize=address -o build/${fileBasenameNoExtension} ${file} && build/${fileBasenameNoExtension}",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}